<Window x:Class="Z12_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Z12_WPF"
        xmlns:res="clr-namespace:Z12_WPF.conv"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dic1.xaml"/>
                <ResourceDictionary Source="Dic2.xaml"/>
                <ResourceDictionary>
                    <res:HeigthZoomConverter x:Key="HeightConverter"/>
                    <res:WidthZoomConverter x:Key="WidthConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="grid" Loaded="grid_Loaded">
        <Grid.Resources>
        </Grid.Resources>
        <Rectangle Fill="{DynamicResource Brush}" HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="800" Margin="0,0,0,0"/>
        <Label Content="{StaticResource Title}" HorizontalAlignment="Left" Margin="370,110,0,0" VerticalAlignment="Top" Height="24" Width="57"/>
        <Label Content="{DynamicResource test}" HorizontalAlignment="Left" Margin="370,150,0,0" VerticalAlignment="Top" Height="24" Width="57"/>
        <Rectangle Fill="{DynamicResource Brush}" HorizontalAlignment="Left" Height="110" Stroke="Black" VerticalAlignment="Top" Width="794" Margin="0,300,0,0"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="700,300,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="600,300,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click2"/>
        <TextBox HorizontalAlignment="Center" Height="{Binding Zoom, Converter={StaticResource HeightConverter}}" Text="{Binding Zoom}" VerticalAlignment="Center" Width="{Binding Zoom, Converter={StaticResource WidthConverter}}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="350,200,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
    </Grid>
</Window>

